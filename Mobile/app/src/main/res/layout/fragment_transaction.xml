<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionIncome"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="@dimen/vertical_margin_medium"
        android:gravity="center">

        <TextView
            android:id="@+id/buttonIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:minWidth="120dp"
            android:layout_marginRight="15dp"
            android:text="@string/transaction_button_income"
            android:textSize="22sp"
            style="@style/button"/>

        <TextView
            android:id="@+id/buttonSpendings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:minWidth="120dp"
            android:layout_marginLeft="15dp"
            android:text="Spendings"
            android:textSize="22sp"
            style="@style/button_noactive"/>

    </LinearLayout>

    <EditText
        android:id="@+id/loginPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_medium"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_prompt_login"
        style="@style/edit_prompt"/>

    <EditText
        android:id="@+id/loginPrompt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_medium"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_prompt_login"
        style="@style/edit_prompt"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/vertical_margin_medium"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_prompt_login"
        style="@style/edit_prompt">


        <EditText
            android:id="@+id/categoryText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/prompt_filed_back"
            android:layout_gravity="start|center"
            android:layout_marginRight="25dp"
            android:hint="@string/transaction_choose_category"
            />
        <TextView
            android:id="@+id/categoryPickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/context_menu_button"
            android:layout_gravity="end|center"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/vertical_margin_medium"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_prompt_login"
        style="@style/edit_prompt">


        <EditText
            android:id="@+id/datePrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/prompt_filed_back"
            android:layout_gravity="start|center"
            android:layout_marginRight="25dp"
            android:hint="@string/transaction_choose_date"
            />
        <TextView
            android:id="@+id/datePickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar_icon"
            android:layout_gravity="end|center"
            />
    </FrameLayout>

</LinearLayout>