<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Squirrel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="text_title_style">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/text_title_font_size</item>
    </style>

    <style name="edit_prompt">
        <item name="android:layout_marginRight">@dimen/edit_prompt_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/edit_prompt_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/edit_prompt_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edit_prompt_horizontal_padding</item>
        <item name="android:background">@drawable/prompt_field</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">300dp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
</resources>